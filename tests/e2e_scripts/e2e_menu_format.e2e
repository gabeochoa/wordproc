# Test: Format menu validation
# Validates Format menu opens and contains expected items

# Open Format menu
menu_open Format
wait 1

# Validate menu is open
validate menu_open=Format

# Validate expected menu items exist
validate menu_contains=Bold
validate menu_contains=Italic
validate menu_contains=Underline
validate menu_contains=Strikethrough
validate menu_contains=Font
validate menu_contains=Paragraph
validate menu_contains=Bullets and Numbering
validate menu_contains=Text Color
validate menu_contains=Highlight Color

# Close menu
key ESCAPE
wait 1
validate menu_open=false

screenshot e2e_menu_format

