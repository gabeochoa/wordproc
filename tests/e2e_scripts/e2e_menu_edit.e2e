# Test: Edit menu validation
# Validates Edit menu opens and contains expected items

# Open Edit menu
menu_open Edit
wait 2

# Validate menu is open
validate menu_open=Edit

# Validate expected menu items exist
validate menu_contains=Undo
validate menu_contains=Redo
validate menu_contains=Cut
validate menu_contains=Copy
validate menu_contains=Paste
validate menu_contains=Select All
validate menu_contains=Find
validate menu_contains=Replace

# Close menu
key ESCAPE
wait 2
validate menu_open=false

