# Test: Format > Font Size (Increase/Decrease/Reset)
# Validates font size controls
# Note: Ctrl+= (not Ctrl++) increases size (Ctrl++ is bound to superscript)

# Type test text
type "Size"
wait 1

# Default font size should be 16
validate font_size=16

# Increase size (Ctrl+=)
menu_open Format
wait 1
menu_select Increase Size
wait 1
validate font_size=18

# Increase again using keyboard shortcut (Ctrl+=)
key CTRL+EQUAL
wait 1
validate font_size=20

# Decrease size (Ctrl+-)
menu_open Format
wait 1
menu_select Decrease Size
wait 1
validate font_size=18

# Decrease again using keyboard
key CTRL+MINUS
wait 1
validate font_size=16

# Reset to default (Ctrl+0)
# First make it different
key CTRL+EQUAL
key CTRL+EQUAL
key CTRL+EQUAL
wait 1
validate font_size=22

# Now reset
menu_open Format
wait 1
menu_select Reset Size
wait 1
validate font_size=16

# Test with keyboard
key CTRL+0
wait 1
validate font_size=16

