# Test: View menu validation
# Validates View menu opens and contains expected items

# Open View menu
menu_open View
wait 1

# Validate menu is open
validate menu_open=View

# Validate expected menu items exist
validate menu_contains=Pageless Mode
validate menu_contains=Paged Mode
validate menu_contains=Show Line Numbers
validate menu_contains=Outline
validate menu_contains=Header
validate menu_contains=Footer
validate menu_contains=Zoom

# Close menu
key ESCAPE
wait 1
validate menu_open=false

