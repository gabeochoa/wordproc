# Test: Hyperlink creation
# Validates hyperlink can be created

# Type link text
type "Visit our website"
wait 2

# Select the text
select_all
wait 2

# Open Insert menu and select Hyperlink
menu_open Insert
wait 2
menu_select "Hyperlink..."
wait 2

# Enter URL in dialog
type "https://example.com"
key ENTER
wait 2

# Validate hyperlink was created
validate has_hyperlink=true
validate hyperlink_url=https://example.com

screenshot e2e_hyperlink

