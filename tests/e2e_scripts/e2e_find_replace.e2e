# Test: Find and Replace (Ctrl+F, Ctrl+H)
# Validates find and replace functionality

# Type some text with repeating words
type "Hello World Hello World"
wait 2

# Open find dialog (Ctrl+F)
key CTRL+F
wait 2
validate dialog_open=find

# Type search text
type "Hello"
wait 2

# Find next
key ENTER
wait 2
validate has_selection=true

# Close find, open replace (Ctrl+H)
key ESCAPE
key CTRL+H
wait 2
validate dialog_open=replace

# Type replacement
type "Hi"
wait 2

# Replace all
key CTRL+SHIFT+ENTER
wait 2

# Validate replacements were made
validate text=Hi World Hi World

